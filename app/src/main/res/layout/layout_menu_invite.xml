<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/cbvGameBoard"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/btnExit"
        style="@style/GameMenuStyle"
        android:layout_marginLeft="0dp"
        app:srcCompat="@drawable/svg_exit"/>

    <ImageView
        android:id="@id/btnInvite"
        style="@style/GameMenuStyle"
        app:srcCompat="@drawable/svg_invite"/>

    <LinearLayout
        android:id="@+id/vgGameMenu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@id/btnUndo"
            style="@style/GameMenuStyle"
            app:srcCompat="@drawable/svg_undo"/>

        <ImageView
            android:id="@id/btnDraw"
            style="@style/GameMenuStyle"
            app:srcCompat="@drawable/svg_draw"/>

        <ImageView
            android:id="@id/btnSurrender"
            style="@style/GameMenuStyle"
            app:srcCompat="@drawable/svg_surrender"/>

    </LinearLayout>

    <ImageView
        android:id="@id/btnStartGame"
        style="@style/GameMenuStyle"
        app:srcCompat="@drawable/svg_start"/>

    <ImageView
        android:id="@id/btnChat"
        style="@style/GameMenuStyle"
        app:srcCompat="@drawable/svg_chat"/>
</LinearLayout>