<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/col_4876ff</item>
        <item name="colorPrimaryDark">@color/col_3a5fcd</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:windowBackground">@color/col_eeeeee</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="GameTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/col_313131</item><!-- 窗口的背景颜色 -->
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:background">@drawabg_timestampee_bg</item>-->
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GameMenuStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="GameResultDialogAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="GameResultDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/GameResultDialogAnim</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>
</resources>
